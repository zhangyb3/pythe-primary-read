page {
  height: 100%;
  background-color: #fff;
  padding: 0 20px;
  box-sizing: border-box;
}

.get-select-word {
  margin-top: 10px;
}

.get-select-word scroll-view {
  max-height: 300px;
  min-height: 150px;
  background-color: #f5f5f5;
  font-size: 14px;
  line-height: 1.7;
  width: 100%;
  padding: 10px 15px;
  box-sizing: border-box;
  border-left: 4px solid #f93;
}

.user-input {
  min-height: 100px;
  max-height: 400px;
  width: 100%;
  margin-top: 30px;
  text-align: justify;
  line-height: 1.7;
}

.fabu {
  width: 50%;
  font-size: 16px;
  height: 40px;
  line-height: 40px;
  background-color: #f93;
  color: #fff;
  margin:30px auto 30px;
}
