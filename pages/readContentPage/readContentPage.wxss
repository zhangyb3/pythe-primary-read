@import "../../wxParse/wxParse.wxss";
view{overflow:visible;}
.read-conPage{
  overflow: hidden;
}
.about-article {
  background-color: #fdfdf3;
  padding: 30rpx 40rpx 80rpx;
  box-sizing: border-box;
  overflow: hidden;
  
}

.article-title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  letter-spacing: 1px;
}

.article-author {
  font-size: 15px;
  color: #f93;
  text-align: center;
  margin: 15rpx 0 0;
}

.article-id-title {
  font-size: 16px;
  line-height: 1.6;
  margin-top:20rpx;
}

.article-content {
  font-size: 16px;
  line-height: 1.7;
  text-align: justify;
  margin-top: 20rpx;
  overflow: hidden;
}
.article-content image{width:50%;height:auto;display: block;margin-bottom:20px;}
.article-audio-box{padding:40px 0 10px;}
.audio-info{overflow: hidden;}
.audio-current-time,.audio-duration-time{color:#666;font-size:12px;display: inline-block;}
.audio-current-time{float:left;}
.audio-duration-time{float:right;}
.audio-bar-width{width:100%;padding:0 40px;box-sizing:border-box;margin-top:3px;overflow: visible;}
.audio-bar-center{height:12px;width:100%;padding-top:5px;box-sizing:border-box;}
.audio-bar{height:2px;width:100%;background-color:#ccc;position:relative;}
.color-audio-bar{position:absolute;height:4px;width:0%;background-color:#f93;top:-1px;border-radius:4px;}
.ball{width:8px;height:8px;border-radius:50%;background-color:#f93;position:absolute;top:-3px;left:0;}
.audio-controller{width:30px;height: 30px;margin:20px auto 0;}
.audio-controller image{width:100%;height: 100%;display:block;}
.fixedControler{width:120rpx;height:120rpx;position: fixed;bottom:20px;right:20px;border-radius:50%;border:2px solid #f93;background-color:rgba(255,255,255,0.9);}
.fixedControler image{width:80rpx;height:80rpx;display:block;margin:20rpx 24rpx;}

.wxParse-p{margin:5px 0;}







