@import "../template/register.wxss";

.primary-read-list {
  background-color: #f1f1f1;
}

.prl-banner image {
  display: block;
  width: 100%;
}

.user-general-info {
  width: 100%;
  height: 166rpx;
  padding: 24rpx 30rpx 0;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.user-pic {
  float: left;
  width: 80rpx;
  height: 80rpx;
}

.user-pic image {
  width: 100%;
  height: 100%;
}

.user-info-text {
  width: 100%;
  padding-left: 100rpx;
  box-sizing: border-box;
}

.user-info-top {
  margin-bottom: 18rpx;
  line-height: 1.3;
  height: 32rpx;
  padding-top:24rpx;
}

.user-name {
  float: left;
}

.user-name text {
  display: inline-block;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.user-info-top view, .user-info-top text{
  font-size: 30rpx;
}

.userChoic-grade {
  float: left;
  margin-left: 60rpx;
  padding-left: 30rpx;
  border-left: 1px solid #ccc;
  position: relative;
}

.userChoic-grade picker {
  height: 32rpx;
  width: 100%;
  color: #f93 !important;
}

.show-grade {
  float: left;
}

.userChoic-grade .change-grade-btn {
  float: left;
  margin-left: 10rpx;
  color: #f93;
  border: 2rpx solid #f93;
  border-radius: 20rpx;
  font-size: 24rpx;
  width: 68rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  margin-top: -4rpx;
  letter-spacing: 1px;
}

.striangle-icon {
  float: left;
  width: 0px;
  height: 0px;
  border-width: 8px;
  border-style: solid;
  border-color: #333 transparent transparent transparent;
  margin-top: 7rpx;
  margin-left: 8rpx;
}

.user-extraRead {
  font-size: 24rpx;
  color: #f93;
  letter-spacing: 1px;
}

.recommend-title {
  font-size: 20rpx;
  letter-spacing: 1px;
  color: #ccc;
  margin-top: 36rpx;
  text-align: center;
  line-height: 1;
}

.pri-article-list {
  margin-top: 12rpx;
  overflow: hidden;
}

.a-pri-article {
  width: 100%;
  min-height: 140rpx;
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
  margin-bottom: 14rpx;
  box-sizing: border-box;
  position: relative;
}

.pri-article-title {
  height: 32rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 16rpx;
  font-size: 0;
  line-height:32rpx;
}

.pri-article-title .pri-title-text {
  float: left;
  font-size: 28rpx;
  color: #999;
  line-height: 32rpx;
  display: block;
  max-width:70%;
  overflow: hidden;
  white-space: nowrap;
}

.extra-article {
  font-size: 32rpx;
  margin-top: 24rpx;
  line-height: 1;
  padding: 0 14rpx;
  box-sizing: border-box;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  border-left: 6rpx solid #f93;
}

.extra-article .recommadation {
  line-height: 1.5;
  font-size: 28rpx;
  margin-top:16rpx;
}

.extra-article .recommadation:nth-child(1){
  margin-top:0;
}

.extra-article>view:last{margin-bottom:0;}

.more-extra {
  font-size: 28rpx;
  color: #f93;
  position: absolute;
  bottom: 18rpx;
  right: 30rpx;
  line-height: 1.5;
}

.learned-num {
  color: #999;
  font-size: 20rpx;
  float: right;
}

.pri-article-title .read-icon {
  float: left;
  margin-left: 16rpx;
  margin-top:4rpx;
  width: 38rpx;
  height: 25rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: cover;
}

.popup-grade {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.pick-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300px;
  background-color: #fff;
  padding: 10px 20px;
  box-sizing: border-box;
}

.picker-btn {
  height: 30px;
  background-color: #fff;
}

.picker-btn>view {
  line-height: 30px;
  color: #f93;
}
